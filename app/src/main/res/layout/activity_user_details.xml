<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="ajsoftware.com.zagodoj.UserDetailsActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/user_detail_name"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/user_detail_surname"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/user_detail_name"
        android:layout_alignStart="@+id/user_detail_name"
        android:layout_marginTop="@dimen/gap_user_details"
        android:hint="Surname"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/user_detail_city"
        android:layout_below="@+id/user_detail_surname"
        android:layout_alignLeft="@+id/user_detail_surname"
        android:layout_alignStart="@+id/user_detail_surname"
        android:layout_marginTop="@dimen/gap_user_details"
        android:hint="City"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/user_detail_phone"
        android:layout_below="@+id/user_detail_city"
        android:layout_alignRight="@+id/user_detail_city"
        android:layout_alignEnd="@+id/user_detail_city"
        android:layout_marginTop="@dimen/gap_user_details"
        android:hint="Phone Number"/>

</RelativeLayout>
